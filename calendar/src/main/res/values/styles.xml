<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Calendar widget theme -->
    <style name="TextAppearance.Calendar.Title"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Calendar.Day"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/calendar_text_date_light</item>
    </style>

    <style name="TextAppearance.Calendar.Week"
        parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
    </style>

</resources>